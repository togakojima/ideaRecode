<div class="wrapper">
  <div class="side-bar">
    <%= render "ideas/side_bar" %>
  </div>
  <div class="chat">
    <div class="chat-header">
      <div class="header-menu">
        <%= link_to "カレンダー", calendars_path(current_user), class: 'btn' %>
      </div>
      <div class="header-menu">
        <%= link_to "マップ", maps_path(current_user), class: 'btn' %>
      </div>
      <div class="header-menu">
        <%= link_to   current_user.nickname, edit_user_path(current_user), class: 'btn' %>
      </div>
      <div class="header-menu">
        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn'%>
      </div>
    </div>

    <div class='room-box'>
      <div class='messages-room'>
        <h3>カレンダー</h3>
      </div>
    </div>

    <div class="calendar-view">
      <div class="show">
        <p>
          <strong>タイトル</strong>
          <%= @calendar.title %>
        </p>

        <p>
          <strong>内容</strong>
          <%= @calendar.content %>
        </p>

        <p>
          <strong>日時</strong>
          <%= @calendar.start_time.strftime("%m-%d %H:%M~") %>
        </p>

        <%= link_to '編集', edit_calendar_path(@calendar) %>
        <%= link_to '消去',calendar_path(@calendar.id), data: {turbo_method: :delete} %>
        <%= link_to '戻る', calendars_path %>
      </div>
    </div>
  </div>
</div>