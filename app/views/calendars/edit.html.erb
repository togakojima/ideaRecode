<div class="wrapper">
  <div class="side-bar">
    <%= render "ideas/side_bar" %>
  </div>
  <div class="chat">
    <div class="chat-header">
      <div class="header-menu-sel">
        <%= link_to "カレンダー", calendars_path(current_user), class: 'btn' %>
      </div>
      <div class="header-menu">
        <%= link_to "マップ", maps_path(current_user), class: 'btn' %>
      </div>
      <div class="header-menu">
        <%= link_to   current_user.nickname, edit_user_path(current_user), class: 'btn' %>
      </div>
      <div class="header-menu">
        <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn'%>
      </div>
    </div>

    <div class='room-box'>
      <div class='messages-room'>
        <h3>カレンダー</h3>
      </div>
    </div>

    <div class="calendar-view">
      <%= form_with(model: @calendar, local: true) do |form| %>

  <div class="title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :title %>
  </div>


  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content %>
  </div>

    <div class="time">
    <div class="form-tag">時間</div>
    <%= form.datetime_select :start_time %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>
    </div>
  </div>
</div>